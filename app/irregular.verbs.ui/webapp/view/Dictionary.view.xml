<mvc:View
    controllerName="irregular.verbs.ui.controller.Dictionary"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    core:require="{
		formatter: 'irregular/verbs/ui/model/formatter'
	}"
>
    <Shell>
        <App
            busy="{dictionaryStore>/busy}"
            class="sapUiSizeCompact"
        >
            <pages>
                <Page title="{i18n>appTitle}">
                    <content>
                        <Table
                            id="dictionaryList"
                            growing="true"
                            growingThreshold="10"
                            items="{
								path: 'dictionary>/Dictionary'
							}"
                        >
                            <headerToolbar>
                                <OverflowToolbar>
                                    <content>
                                        <ToolbarSpacer />
                                        <Button
                                            id="refreshButton"
                                            icon="sap-icon://refresh"
                                            tooltip="{i18n>refreshTooltip}"
                                            press=".onRefresh"
                                        />
                                    </content>
                                </OverflowToolbar>
                            </headerToolbar>
                            <columns>
                                <Column>
                                    <Text text="Base" />
                                </Column>
                                <Column>
                                    <Text text="Past" />
                                </Column>
                                <Column>
                                    <Text text="Participle" />
                                </Column>
                                <Column>
                                    <Text text="Translation" />
                                </Column>
                            </columns>
                            <items>
                                <ColumnListItem>
                                    <Input value="{dictionary>base}" />
                                    <Input value="{dictionary>past}" />
                                    <Input value="{dictionary>participle}" />
                                    <Input value="{dictionary>translation}" />
                                </ColumnListItem>
                            </items>
                        </Table>
                    </content>
                </Page>
            </pages>
        </App>
    </Shell>
</mvc:View>
